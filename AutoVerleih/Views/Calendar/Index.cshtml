@model IEnumerable<AutoVerleih.ViewModels.VerleihVW>
@using AutoVerleih.Filter

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    DateTime dtSart = @DefaultFilter.DT_From;
}

<grid>

</grid>
<table class="table table-bordered">
    <thead id="tableHeader">
        <tr>
            @for (int i = 0; i < 10; i++)
            {
                <th style=" font-size: 11px;">
                    @dtSart.AddDays(@i).ToLongDateString()<br />
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!--
                    <td>
                        @item.Autos.Marke
                    </td>
    -->
                @for (int i = 0; i < 10; i++)
                {
                    System.Diagnostics.Debug.WriteLine(@item.Verleih.DT_Von.Date + "/" + @dtSart.Date.AddDays(@i));

                    @if (@item.Verleih.DT_Von.Date == @dtSart.Date.AddDays(@i))
                    {
                        <td class="" style=" font-size: 12px; background-color: lightsalmon; border-radius: 1rem;">
                            <label class="text-nowrap fw-bold">
                                @item.Autos.Type
                                @item.Kunden.Name
                            </label>
                        </td>
                    }
                    else
                    {
                        <td>
                            <br />
                        </td>
                    }
                }
            </tr>
        }
    </tbody>
</table>
